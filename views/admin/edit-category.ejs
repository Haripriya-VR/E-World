<%-include('../partials/adminheader') %>


  <body>
    <div class="container-fluid main-content ">
      <div class="  product-content shadow  my-5  d-flex">
        <div class="container signup-details">
          <h2 class="fw-bold text-dark text-center py-4">Edit Category</h2>
          <form action="/admin/edit-category/<%= categoryToEdit._id %>" method="post" id="form">
            <div class="form-group input-control input-box py-2 ">
              <label for="categoryname">Category Name:</label>
              <input type="text" id="categoryname" name="categoryname" class="form-control" value="<%= categoryToEdit.category %>">
              <div class="error"></div>

            </div>

            <!-- status -->
            
            <div class="form-group input-control input-box py-2">
                <label for="status">Status:</label><br>
                <input type="radio" name="status" id="active" value="active" <%= categoryToEdit.status === 'active' ? 'checked' : '' %> >
                <label for="active" class="pe-4">Active</label>
                <input type="radio" name="status" id="Inactive" value="Inactive" <%= categoryToEdit.status === 'Inactive' ? 'checked' : '' %> >
                <label for="Inactive">Inactive</label>
                <div class="error"></div>
              </div>
            
        
            <div class="form-group input-control input-box pt-3 ">
              <button class="btn1 shadow text-white" type="submit" value="Sign In">Edit category</button>
            </div>



          </form>
        </div>
      </div>
    </div>



    <script src="/static/js/admin/product.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  </body>