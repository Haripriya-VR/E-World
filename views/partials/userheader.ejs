  <style>
    .second-bar {
      background-color: #A67AD3;
      display: none;
    }
  
    @media (max-width: 991px) {
      .second-bar {
        display: block;
      }
  
      .nav-div {
        display: none;
      }
  
      .nav-item-list ul .nav-item-1 a {
        display: none;
      }
  
    }
  </style>
  
  </head>
  
  <main-section>
    <div class="container-fluid px-0 py-0">
      <nav class="navbar">
        <div class="d-flex">
          <a class="navbar-brand px-4 pt-3" href="/"><span>E-World</span></a>
          <div class="nav-item-list pt-3 px-3 " id="navbarSupportedContent">
            <ul class=" list-inline  list-unstyled">
              <li class="nav-item-1 list-inline-item">
                <a class="nav-link active pe-5" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item list-inline-item">
                <a class="nav-link active pe-5" aria-current="page" href="/products">shop</a>
              </li>
              <li class="nav-item list-inline-item">
                <a class="nav-link active pe-5" aria-current="page" href="/profile"> Profile</a>
              </li>
            </ul>
          </div>
        </div>
  
        <div class="mx-4 nav-div">
          <% if (login) { %>
            <button class="user-login"><a href="/logout" class="text-decoration-none text-white">Logout</a></button>
            <% } else { %>
              <button class="user-login"><a href="/login" class="text-decoration-none text-white">Login</a></button>
              <% } %>

                <a href="/wishlist"> <i class="fa-regular fa-heart text-white px-3"></i></a>
                <a href="/cart"> <span class="badge p-1 text-bg-secondary" id="cartQuantity">
                    <%= cartQuantity %>
                  </span><i class="fa-solid fa-cart-shopping text-white ps-1 pe-2"></i></a>
        </div>
    </div>
    </nav>

    <div class="second-bar ">
      <div class="d-flex   me-2 justify-content-end ">
        <a href="/wishlist"> <i class="fa-regular fa-heart text-white px-4"></i></a>
        <a href="/cart" class="pe-3"> <span class="badge p-1 text-bg-secondary" id="cartQuantity">
            <%= cartQuantity %>
          </span><i class="fa-solid fa-cart-shopping text-white ps-2 pe-2"></i></a>
        <% if (login) { %>
          <button class="user-login "><a href="/logout" class="text-decoration-none text-white ">Logout</a></button>
          <% } else { %>
            <button class="user-login"><a href="/login" class="text-decoration-none text-white">Login</a></button>
            <% } %>
      </div>
    </div>
  
  </main-section>

