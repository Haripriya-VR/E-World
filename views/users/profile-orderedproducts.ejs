<%-include('../partials/profileheader') %>

<section>
    
    <div class="container d-flex ">
      <div class="d-flex mt-3"><h2>Ordered products</h2></div>
  </div>
    <div class="container-fluid py-2">
      <form action="/upload" method="post" enctype="multipart/form-data" >
        <table class="table">
          <thead class="table-light">
            <tr>
              <th scope="col">Image</th>
              <th scope="col">Product Name</th>
              <th scope="col">quantity</th>
              <th scope="col">price</th>
              <!-- <th scope="col"> </th> -->
            </tr>
          </thead>
    
          <tbody>
            <% products.forEach((data) => { %>
                <tr>
                  <td>
                  
                      <!-- <img src="\<%= data.images %>" alt="Product Image" style="width: 50px; height: 50px;"> -->
                      <img src="\<%= data.productId.images[0] %>" alt="Product Image" style="width: 50px; height: 50px;">
                  </td>
                    <td><%= data.productId.name %></td>
                    <td><%= data.quantity %></td>
                    <td id="totalPrice"><%= data.quantity * data.productId.price %></td>
                    <!-- <td>
                        <a href="/cancel-orderedproduct/<%= orders._id %>/<%= data._id %>" class="btn btn-danger">Cancel order</a>
                    </td> -->
                    
                </tr>
            <% }); %>
        </tbody>
    
        </table>
</form>

   
    
    </div>
   
  </section>